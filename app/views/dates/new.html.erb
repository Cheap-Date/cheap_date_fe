<div class="container">
    <h1>Create a Date</h1>

    <%= form_with url: "/users/#{@user.id}/meetups", method: :post, local: true, data: { turbo: false }, class: "needs-validation", novalidate: true do |form| %>
      <div class="mb-3">
        <%= form.label :title, "Title", class: "form-label" %>
        <%= form.text_field :title, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a title.
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :location, "Location", class: "form-label" %>
        <%= form.text_field :location, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a location.
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :start_time, "Start Time", class: "form-label" %>
        <%= form.time_field :start_time, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a start time.
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :end_time, "End Time", class: "form-label" %>
        <%= form.time_field :end_time, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide an end time.
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :first_date, "First Date?", class: "form-label" %>
        <%= form.select :first_date, ["True", "False"], {}, class: "form-select" %>
      </div>

      <%= form.submit "Create Date", class: "btn btn-primary" %>
    <% end %>

    <%= button_tag 'Get Location', id: 'get-location', class: 'btn btn-info mt-3' %>
</div>

